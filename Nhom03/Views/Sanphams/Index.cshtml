                @Html.DisplayNameFor(model => model.Dongia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tonkho)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoaisanphamId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hinhanh)
